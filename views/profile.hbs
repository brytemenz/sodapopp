<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Include Bootstrap CSS link here -->
  <link rel="stylesheet" href="path/to/bootstrap.min.css">
  <style>
    /* Additional custom styles */
    .carousel-caption h1 {
      font-size: 1.5rem;
    }
    .project-card {
      height: 300px;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg bg-light">
    <!-- Your navigation content here -->
  </nav>

  <section>
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
      <!-- Your carousel content here -->
    </div>
  </section>

  <br>
  <br>

  <section class="container">
    <div class="row">
      <div class="col-md-4 mb-4 text-center">
        <img src="path/to/profile-picture.jpg" alt="Profile Picture" class="img-fluid rounded-circle" style="max-width: 150px;">
      </div>
      <div class="col-md-8">
        <h1>Projects</h1>
        <div class="row row-cols-1 row-cols-md-2 g-3">
          {{#each allProjects}}
          <div class="col">
            <div class="card project-card">
              <a href="/project/{{_id}}" target="_blank">
                <img src="{{projectPhoto}}" alt="{{projectName}} Cover Photo" class="card-img-top">
              </a>
              <div class="card-body">
                <h5 class="card-title">{{projectName}}</h5>
                <a href="/project/{{_id}}" class="btn btn-primary btn-sm" target="_blank">See Project Details</a>
                <a href="/project/{{_id}}/edit" class="btn btn-secondary btn-sm">Edit</a>
                <form action="/project/{{_id}}/delete" method="POST" class="d-inline">
                  <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                </form>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </section>

  <!-- Include Bootstrap JS scripts here -->
  <script src="path/to/bootstrap.bundle.min.js"></script>
</body>
</html>
<hr>

<div class="col-md-4 mb-4 text-center">
        <img src="{{user.photo}}" alt="Profile Picture" class="img-fluid rounded-circle" style="max-width: 150px;">
      </div>

