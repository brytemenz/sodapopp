<div class="row justify-content-center">
  <div class="col-md-4 text-center mb-4">
    <img src="{{username.photo}}" alt="Profile Picture" class="img-fluid rounded-circle profile-pic" style="max-width: 150px;">
    <h5 class="mt-3">{{username.name}}</h5>
    <h5 ><em>{{username.course}}</em></h5>
    <a href="/edit-profile" class="btn btn-info btn-sm mt-3">
      <i class="bi bi-pencil-square me-1"></i> Update Profile
    </a>
  </div>
</div>

<hr>

<h2 class="card-title row justify-content-center">My Awesome Projects!</h2>
<section class="profile-container">
  <div class="row justify-content-center">
    {{#each allProjects}}
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card">
        <a href="/project/{{_id}}" target="_blank">
          <img src="{{projectPhoto}}" alt="{{projectName}} Cover Photo" class="card-img-top" style="max-height: 300px;">
        </a>
         <div><h4 class="card-title row justify-content-center  mt-3">{{projectName}}</h4></div>
        <div class="card-body d-flex justify-content-between align-items-center">
         
          <div class="btn-container">
            <a href="/project/{{_id}}" class="btn btn-warning me-2">Details</a>
            <a href="/project/{{_id}}/edit" class="btn btn-warning me-2">Edit</a>
            <form action="/project/{{_id}}/delete" method="POST">
              <button class="btn btn-dark mt-3" onclick="return confirm('Are you sure you want to delete this project?')" type="submit">
                <i class="bi bi-trash me-1"></i>
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</section>


